#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() {

    /* Enter your code here. Read input from STDIN. Print output to STDOUT */   
    int a,b,c,d;
    scanf("%d%d%d%d",&a,&b,&c,&d);
    printf("Binoy's house is located at (%.1f,%.1f)",(float)(a+c)/2,(float)(b+d)/2);
    return 0;
}
