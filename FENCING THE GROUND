#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() {

    /* Enter your code here. Read input from STDIN. Print output to STDOUT */    
    float a,b;
    scanf("%f\n%f",&a,&b);
    printf("Required length is %.2fm\n",2*(a+b));
    printf("Required quantity of carpet is %.2fsqm",a*b);
    return 0;
}
