#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() {

    int length,breadth;
    scanf("%d\n%d",&length,&breadth);
    printf("Required length is %.2fm\n",(float)(2*(length+breadth)));
    printf("Required quantity of carpet is %.2fsqm",(float)(length*breadth));  
    return 0;
}
