#include <math.h>
#include <stdio.h>
#include <string.h>
#include <stdlib.h>
#include <assert.h>
#include <limits.h>
#include <stdbool.h>

int main() {
    int a,b,c;
    float interest,amount,discount,final;
    scanf("%d\n%d\n%d\n",&a,&b,&c);
    interest=(float)(a*b*c)/100;
    amount=(float)interest+a;
    discount=(float)(interest*2/100);
    final=amount-discount;
    printf("%.2f\n%.2f\n%.2f\n%.2f",interest,amount,discount,final);
    return 0;
}
