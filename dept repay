#include <math.h>
#include <stdio.h>
#include <string.h>
#include <stdlib.h>
#include <assert.h>
#include <limits.h>
#include <stdbool.h>

int main() {
    /* Enter your code here. Read input from STDIN. Print output to STDOUT */
    int a , b ,c;
    float si,e,d,f;
    scanf("%d\n%d\n%d",&a,&b,&c);
    si=(float)((a*b*c)/100);
    e=(float)a+si;
    d=(float)(si*2/100);
    f=(e-d);
    printf("%.2f\n%.2f\n%.2f\n%.2f",si,e,d,f);
    return 0;
}
