#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() {

    int hr,min,sec,a,b,c;
    scanf("%d\n%d\n%d",&hr,&min,&sec);
    c=hr*3600+min*60+sec;
    a=c/3600;
    b=(c%3600)/60;
    c=c%60;
    printf("Total Number of hours is %d\n",a);
    printf("Total Number of minutes is %d\n",b);
    printf("Total Number of seconds is %d\n",c);
    return 0;
}
